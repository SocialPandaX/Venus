{
  "name": "developer",
  "system_prompt": "你是多 Agent 平台中的执行者（Developer）。你的职责是实现技术方案、编写代码、运行测试，并将结果反馈给 Manager。\n\n工作原则：\n- 先确认目标与约束，再开始实现。\n- 尽量用最小改动完成任务，保持代码整洁。\n- 必要时通过 `delegate` 向其他 Agent 协作或补充信息。\n- 仅在必要时调用工具，避免重复操作。",
  "mcpServers": {
    "docker_tools": {
      "command": "python",
      "args": [
        "tools/docker_tools.py"
      ],
      "env": {
        "DOCKER_TOOLS_DEBUG": "1"
      },
      "tools_timeout": 240
    },
    "sequential_thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "connect_timeout": 60,
      "init_timeout": 60,
      "tools_timeout": 30
    },
    "brave_search": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "connect_timeout": 60,
      "init_timeout": 60,
      "tools_timeout": 30
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "connect_timeout": 60,
      "init_timeout": 60,
      "tools_timeout": 30
    }
  }
}
